include ./maxin-formGroupInput.jade

// native : (Icon Image)
.asset-wrap(data-used-by='native' data-assets-section='icon')
    div.asset-wrap-header.clearfix
        div.asset-wrap-header-text-container
            .asset-wrap-header-title Icon Image
            .asset-wrap-header-asset-size
        ul.nav.nav-tabs.asset-wrap-header-tabs#asset-1-tab
            li.active
                a(data-target='#asset-1a' ) Select asset
            li
                a(data-target='#asset-1b' ) Input by URL
    .tab-content
        .tab-pane.active#asset-1a
            .region-assets-helper-icon
        .tab-pane#asset-1b
            // native: icon_image_asset (hidden)
            +formGroupInputHidden('icon_image_asset', true, 'native')
            // native: icon_image_url (displayName: Icon Input URL)
            +formGroupInput('icon_image_url', 'Icon Input URL', true, 'text', 'native')
            // native: icon_image_preview_url (displayName: Icon Preview URL)
            +formGroupInput('icon_image_preview_url', 'Icon Preview URL', false, 'text', 'native')


